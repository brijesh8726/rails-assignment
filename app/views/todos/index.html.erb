<p id="notice"><%= notice %></p>
<div class="todo-container">
<h1>Todos</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><h2><%= todo.name %></h2></td>
        <td><%= link_to 'Show', todo,class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo),class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', todo,class:"btn btn-danger" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

